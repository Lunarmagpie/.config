#!/usr/bin/env bash

pkill waybar

pkill kanshi
kanshi &

# Its convienent to have steam contantly running
#if [ -z $(pgrep steam) ]; then
#	echo "Starting Steam"
#	flatpak run com.valvesoftware.Steam -silent &
#fi

# Do the same for discord
if [ -z $(pgrep discord) ]; then
	echo "Starting Discord"
	flatpak run com.discordapp.Discord --start-minimized & 
fi


pkill dunst
dunst &

cd ~/.config/waybar
waybar --config main-bar-config --style style.css &
waybar --config alt-bar-config &
waybar --config laptop-bar-config &
cd ~

lxqt-policykit-agent &

flatpak run org.fcitx.Fcitx5 -d &

keyd-application-mapper -d

pkill -f battery-monitor
battery-monitor &

pkill -f bspwm-tile
./bspwm-tile &

pkill -f desktop-thingies
# desktop-thingies -c ~/.config/desktop-thingies/config.py &
desktop-thingies -c ~/.config/desktop-thingies/config2.py &
