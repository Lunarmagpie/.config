fixed-center = true

[bar/left-left]
inherit = bar/modulebar
width = 2.3%
offset-x = .5%
modules-center = suspend-label s1

[bar/left]
inherit = bar/modulebar
width = 8.1%
offset-x = 3.2%
modules-center = bspwm s1


[bar/center]
inherit = bar/modulebar
width = 10%
offset-x = 46%
modules-center = date

[bar/right]
inherit = bar/modulebar
width = 4%
offset-x = 95.5%
modules-center = pulseaudio

[module/open]
