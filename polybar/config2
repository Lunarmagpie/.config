label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %{T9}%{T-}
label-focused-background = ${colors.background-module}
label-focused-foreground = ${colors.secondary}
label-focused-padding = 2

label-occupied = %{T9}%{T-}
label-occupied-background = ${colors.background-module}
label-occupied-foreground = ${colors.secondary}
label-occupied-padding = 2

label-urgent = %{T9}%{T-}
label-urgent-background = ${colors.background-module}
label-urgent-foreground = ${colors.secondary}
label-urgent-padding = 2

label-empty = %{T9}%{T-}
label-empty-background = ${colors.background-module}
label-empty-foreground = ${colors.background-module}
label-empty-padding = 2

pin-workspaces = true

[module/time]
type = internal/date
interval = 5

date =
# date-alt = " %Y-%m-%d"

time = "時%I分%M"
# time-alt = %H:%M:%S

format-prefix = 
label-foreground = ${colors.foreground}
label-background = ${colors.background-module}

; format-underline = ${colors.underline}

label = " %time% "

[module/date]
inherit = module/time
interval = 5
date = "%Y%{T10}年%{T-}%m%{T10}月%{T-}%d%{T10}日%{T-}"

time = "%I%{T10}時%{T-}%M%{T10}分%{T-}"

label = "%date%%time%"

[module/pulseaudio]
type = internal/pulseaudio

label-muted = %{T6}󰸈%{T-}  0%
label-muted-foreground = ${colors.foreground}
label-muted-background = ${colors.background-alt}
label-muted-padding = 1

format-volume = <ramp-volume>  <label-volume>
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.background-alt}
format-volume-padding = 1

ramp-volume-0 = %{T6}%{T-}
ramp-volume-1 = %{T6}󰖀%{T-}
ramp-volume-2 = %{T6}󰕾%{T-}

label-volume = "%percentage%%"

[module/suspend-label]
type = custom/text
content = "%{T9}%{T-}"
click-left = slock

